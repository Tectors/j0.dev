<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonia="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:settings="clr-namespace:vj0.ViewModels.Settings"
    xmlns:controls="clr-namespace:vj0.Controls"

    x:Class="vj0.Views.Settings.DebugSettingsView"
    x:DataType="settings:DebugSettingsViewModel"
    
    mc:Ignorable="d"
    d:DesignWidth="1500"
    d:DesignHeight="1500">
    
    <Grid>
        <TextBlock FontSize="25" Margin="10 0 0 0" Opacity="0.99" FontWeight="DemiBold" ZIndex="1">Debug</TextBlock>
            
        <ScrollViewer controls:ScrollTopShadow.Enable="True" Margin="0 45 0 0">
            <StackPanel VerticalAlignment="Top" Spacing="10" Margin="10 0">
                <Button Height="66" Click="OpenLogsFolder" Cursor="Hand" Background="{DynamicResource ExpanderBackground}" BorderBrush="#3d3d3d" BorderThickness="1" HorizontalAlignment="Stretch">
                    <Button.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#191919</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver">#3d3d3d</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed">#141414</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBorderBrushPressed">#3d3d3d</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPressed">White</SolidColorBrush>
                        </ResourceDictionary>
                    </Button.Resources>
                    
                    <StackPanel Orientation="Horizontal" Margin="15 0" Spacing="2" HorizontalAlignment="Left">
                        <avalonia:FluentIcon
                            Icon="WindowConsole"
                            FontSize="25"
                            IconVariant="Regular"/>
                    
                        <TextBlock Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17">Open Logs</TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Height="66" Click="OpenStartup" Cursor="Hand" Background="{DynamicResource ExpanderBackground}" BorderBrush="#3d3d3d" BorderThickness="1" HorizontalAlignment="Stretch">
                    <Button.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#191919</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver">#3d3d3d</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed">#141414</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBorderBrushPressed">#3d3d3d</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPressed">White</SolidColorBrush>
                        </ResourceDictionary>
                    </Button.Resources>
                    
                    <StackPanel Orientation="Horizontal" Spacing="2" Margin="15 0" HorizontalAlignment="Left">
                        <avalonia:FluentIcon
                            Icon="Open"
                            FontSize="25"
                            IconVariant="Regular"/>
                    
                        <TextBlock Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17">Open Startup</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>