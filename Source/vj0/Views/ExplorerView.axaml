<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels1="clr-namespace:vj0.ViewModels"
    xmlns:Explorer="clr-namespace:vj0.Models.Files"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:framework="clr-namespace:vj0.Services.Framework"

    x:Class="vj0.Views.ExplorerView"
    x:DataType="viewModels1:ExplorerViewModel"
    
    Background="{DynamicResource BackgroundBrush}"

    mc:Ignorable="d"
    d:DesignWidth="700"
    d:DesignHeight="600">
    
    <Grid RowDefinitions="*">
        <Grid ColumnDefinitions="*,Auto,*">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Height="60" IsVisible="False">
                    <Border
                        BorderThickness="1 1 1 0"
                        Background="#0d0d0d"
                        ClipToBounds="True"
                        Padding="15"
                        Margin="5 0 5 -50"
                        CornerRadius="8 8 0 0">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#1e1e1f" Offset="0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        
                        <Grid>
                            <StackPanel Opacity="0.75">
                                <TextBlock FontSize="12">Vfs Mount Point</TextBlock>
                                <TextBlock FontSize="12">Vfs Version</TextBlock>
                                
                                <TextBlock FontSize="12">Offset</TextBlock>
                            </StackPanel>
                            
                            <StackPanel Opacity="1" HorizontalAlignment="Right" Background="#0d0d0d">
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemMountPoint}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemArchiveVersion}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Folders -->
                <Border
                    Grid.Row="1"
                    BorderThickness="1 1 1 0"
                    Background="#0d0d0d"
                    ClipToBounds="True"
                    CornerRadius="8 8 0 0">
                    
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Color="#1e1e1f" Offset="0" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    
                    <Grid>
                        <!-- Folder Tree -->
                        <TreeView AttachedToVisualTree="TreeView_AttachedToVisualTree"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  x:Name="FileTree"
                                  SelectionChanged="FileTree_OnSelectionChanged"
                                  Padding="15"
                                  ItemsSource="{Binding TreeViewCollection}">
                            
                            <TreeView.ItemContainerTheme>
                                <ControlTheme x:DataType="Explorer:TreeItem"
                                              TargetType="TreeViewItem"
                                              BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                    <Setter Property="IsExpanded" Value="{Binding Expanded, Mode=TwoWay}" />
                                    <Setter Property="IsSelected" Value="{Binding Selected, Mode=TwoWay}" />
                                </ControlTheme>
                            </TreeView.ItemContainerTheme>
                            
                            <TreeView.ItemTemplate>
                                <TreeDataTemplate ItemsSource="{Binding FolderChildren}">
                                    <Grid IsHitTestVisible="False" ColumnDefinitions="*,Auto">
                                        <StackPanel Orientation="Horizontal"
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center">
                                            
                                            <Canvas Width="14"
                                                    Height="14"
                                                    Margin="0 3 8 0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                                <Path
                                                    Data="M2.5,5.5 A1.5,1.5 0 0 1 4,4 H7.172 A1.5,1.5 0 0 1 8.232,4.44 L9.56,5.76 A1.5,1.5 0 0 0 10.62,6 H16 A1.5,1.5 0 0 1 17.5,7.5 V14.5 A1.5,1.5 0 0 1 16,16 H4 A1.5,1.5 0 0 1 2.5,14.5 V5.5 Z"
                                                    Stroke="#ffffff"
                                                    StrokeThickness="1"
                                                    Fill="{Binding ItemBrush}"
                                                    Width="14"
                                                    Stretch="Uniform"
                                                    Height="14"/>
                                            </Canvas>

                                            <TextBlock
                                                       FontSize="14"
                                                       IsHitTestVisible="False"
                                                       Text="{Binding Name}"
                                                       VerticalAlignment="Center"/>

                                            <StackPanel IsHitTestVisible="False"
                                                        IsVisible="{Binding HasAssets}"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Opacity="0.5"
                                                        Margin="9 0 9 0">
                                                <TextBlock FontSize="14" Text="{Binding AssetCountText}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </TreeDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Border>
            </Grid>
    
            <GridSplitter Grid.Column="1" 
                          Width="9"
                          Opacity="0"
                          VerticalAlignment="Stretch" 
                          ResizeDirection="Columns" />
            
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="4 0 0 5" Spacing="10">
                    <controls:BreadcrumbBar
                        Padding="5"
                        ItemsSource="{Binding FileViewStack}"
                        ItemClicked="OnBreadcrumbItemPressed">
                        <controls:BreadcrumbBar.ItemTemplate>
                            <DataTemplate DataType="Explorer:TreeItem">
                                <controls:BreadcrumbBarItem Content="{Binding Name}" />
                            </DataTemplate>
                        </controls:BreadcrumbBar.ItemTemplate>
                    </controls:BreadcrumbBar>
                </StackPanel>

                <Grid Margin="0 0 10 0" Grid.Row="1" IsVisible="{Binding Source={x:Static framework:AppServices.Settings}, Path=Application.ShowDebugData}">
                    <Border
                        BorderThickness="1"
                        Background="#0a0a0a"
                        ClipToBounds="True"
                        Margin="0 0 0 5"
                        Padding="15"
                        CornerRadius="8">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#1e1e1f" Offset="0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        
                        <Grid>
                            <StackPanel Opacity="0.75">
                                <TextBlock FontSize="12">Vfs</TextBlock>
                                <TextBlock FontSize="12">Mount Point</TextBlock>
                                <TextBlock FontSize="12">Version</TextBlock>
                            </StackPanel>
                            
                            <StackPanel Opacity="1" HorizontalAlignment="Right" Background="#0a0a0a">
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemArchive}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemMountPoint}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemArchiveVersion}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border
                        Grid.Row="1" BorderThickness="1"
                        Background="#0a0a0a"
                        Margin="0 0 0 5"
                        ClipToBounds="True"
                        Padding="15"
                        CornerRadius="8">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#1e1e1f" Offset="0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        
                        <Grid>
                            <StackPanel Opacity="0.75">
                                <TextBlock FontSize="12">Offset</TextBlock>
                                <TextBlock FontSize="12">Size</TextBlock>
                                <TextBlock FontSize="12">Compression Method</TextBlock>
                                <TextBlock FontSize="12">Is Encrypted</TextBlock>
                            </StackPanel>
                            
                            <StackPanel Opacity="1" HorizontalAlignment="Right" Background="#0a0a0a">
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemOffset}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemSize}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemCompressionMethod}"/>
                                <TextBlock FontSize="12" TextAlignment="Right" Text="{Binding SelectedItemIsEncrypted}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Border
                        Background="#0d0d0d"
                        BorderThickness="1 1 0 0"
                        CornerRadius="8 0 0 0">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#1e1e1f" Offset="0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        
                        <Grid>
                            <TextBlock IsVisible="{Binding !FilesInFolderView}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.45">No files in folder</TextBlock>
                            
                            <ScrollViewer Margin="0 0 5 0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <ListBox Margin="15" ItemsSource="{Binding FlatViewFiles}" 
                                         SelectionMode="Multiple"
                                         AutoScrollToSelectedItem="True"
                                         SelectionChanged="OnFileSelectionChanged"
                                         DoubleTapped="OnFileItemDoubleTapped">
                                    
                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListBox.Styles>
                                    
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="Explorer:FileTile">
                                            <StackPanel Spacing="5" Margin="25 0 0 0"
                                                        Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <Canvas Width="14" Height="14" Margin="0 0 4 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Path
                                                        Data="M4,2 H10 L14,6 V14 A2,2 0 0 1 12,16 H4 A2,2 0 0 1 2,14 V4 A2,2 0 0 1 4,2 Z M10,2 V6 H14"
                                                        Stroke="White"
                                                        StrokeThickness="1"
                                                        Fill="#0e91e8"
                                                        Width="14"
                                                        Height="14"
                                                        Stretch="Uniform"/>
                                                </Canvas>
                                                <TextBlock Text="{Binding NameWithoutExtension}"
                                                           FontSize="14"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>