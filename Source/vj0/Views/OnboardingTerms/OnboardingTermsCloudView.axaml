<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fluent="clr-namespace:FluentIcons.Avalonia.Fluent;assembly=FluentIcons.Avalonia.Fluent"

    x:Class="vj0.Views.OnboardingTerms.OnboardingTermsCloudView"
    
    mc:Ignorable="d"
    d:DesignWidth="1500"
    d:DesignHeight="1500">
    
    <Border Background="{DynamicResource GuideBackgroundBrush}"
            CornerRadius="12" 
            BorderBrush="#333333"
            VerticalAlignment="Top"
            BorderThickness="1 0 0 0"
            Margin="20 0"
            Padding="40">
        <StackPanel Spacing="10">
            <TextBlock FontSize="26" LetterSpacing="-1"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillPrimaryBrush}">
                What is the Cloud Service?
                
                <fluent:FluentIcon
                    Icon="Cloud"
                    IconSize="Size32"
                    Margin="5 0 0 0"
                    IconVariant="Regular"/>
            </TextBlock>

            <TextBlock FontSize="19" 
                       TextWrapping="Wrap">
                It's a way for other applications like JsonAsAsset to communicate with this app.
            </TextBlock>
            
            <StackPanel Margin="10,5,0,0" Spacing="4" Opacity="0.7">
                <TextBlock FontSize="17" TextWrapping="Wrap">• Read game files</TextBlock>
                <TextBlock FontSize="17" TextWrapping="Wrap">• Integrate with workflows without manual steps</TextBlock>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>